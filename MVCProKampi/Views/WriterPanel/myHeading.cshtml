@model List<EntityLayer.Concrete.Heading>
@{
    ViewBag.Title = "myHeading";
    Layout = "~/Views/Shared/_writerLayout.cshtml";
}



@{string color = "";
    string name = "";
    string headingColor = "";}
<br />
<div class="container">
    <h2 class="content-header">Başlıklar Listesi</h2>
</div>
<br />
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tablo</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 15%">
                                Oluşturan Yazar
                            </th>
                           
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.category.categoryName == "Spor")
                            {
                                color = "badge badge-success";
                            }
                            if (item.category.categoryName == "Tiyatro")
                            {
                                color = "badge badge-warning";
                            }

                            if (item.category.categoryName == "Moda")
                            {
                                color = "badge badge-danger";
                            }

                            if (item.category.categoryName == "Teknoloji")
                            {
                                color = "badge badge-info";
                            }
                            if (item.category.categoryName == "Eğitim")
                            {
                                color = "badge badge-secondary";
                            }
                            if (item.headingStatus == true)
                            {
                                headingColor = "badge badge-primary";
                                name = "AKTİF";
                            }
                            if (item.headingStatus == false)
                            {
                                headingColor = "badge badge-dark";
                                name = "PASİF";
                            }

                            <tr>
                                <td>
                                    @item.headingID
                                </td>
                                <td>
                                    <a>
                                        @item.headingName
                                    </a>
                                    <br />
                                    <small>
                                        @item.headindDate.ToShortDateString()
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.writer.writerImage">
                                        </li>
                                    </ul>
                                </td>
                               
                                <td class="project-state">
                                    <span class="@color">@item.category.categoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/contentbyHeading/@item.headingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Entryler
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterPanel/editHeading/@item.headingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/WriterPanel/deleteHeading/@item.headingID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a class="btn btn-outline-dark" href="/WriterPanel/newHeading/">Yeni Başlık Ekle</a>




