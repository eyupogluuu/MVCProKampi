@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "addAdmin";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container">
    <h2 class="offcanvas-header" style="margin-left:350px;">Yeni Admin Ekleme Sayfası</h2>
</div>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<br />
<div class="container">
    @using (Html.BeginForm("addAdmin", "Authorization", FormMethod.Post))
    {
        <div>
            @Html.Label("Kullanıcı Adı:")
            @Html.TextBoxFor(x => x.adminUsername, new { @class = "form-control" })

            <br />

            @Html.Label("Şifre:")
            @Html.TextBoxFor(x => x.password, new { @class = "form-control" })

            <br />
            @Html.Label("Rolü:")
            @Html.TextBoxFor(x => x.role, new { @class = "form-control" })

            <br /><br />
            <button class="btn btn-outline-dark" id="btn3">Kaydet</button>
        </div>
    }
</div>
<script>
    $('#btn3').click(function () {
        swal({
            title: "Tebrikler!",
            text: "Yeni Admin Eklendi",
            icon: "success",
            button: "Devam Et",
        });
    })
</script>
